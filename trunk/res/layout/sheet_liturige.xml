<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_weight="1" android:layout_height="fill_parent" android:orientation="vertical" android:layout_width="0dp">

	<FrameLayout android:layout_width="match_parent" android:layout_height="wrap_content" style="@style/BorderPanel" android:layout_marginBottom="2.5dp">
		<include android:id="@+id/liturgie_talent" layout="@layout/talent_list_item" android:layout_width="match_parent" android:layout_height="wrap_content"></include>
	</FrameLayout>
	<ListView android:id="@+id/liturgie_list"  style="@style/BorderPanel"
		 android:fadingEdgeLength="0dip" android:layout_width="match_parent" android:cacheColorHint="#00000000" android:childDivider="#00000000"
		android:choiceMode="singleChoice" android:dividerHeight="0dip" android:layout_height="wrap_content"></ListView>
		
	<TextView android:visibility="gone" android:text="Keine Liturgien gefunden. Um diesen Tab zu entfernen öffne sein Kontextmenü (langer Tap) und wähle 'Tab entfernen'." android:id="@+android:id/empty" android:layout_height="fill_parent" android:layout_width="fill_parent" android:gravity="center" style="@style/BorderPanel"></TextView>		
</LinearLayout>