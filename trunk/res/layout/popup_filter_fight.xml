<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:padding="5dip"
	android:id="@+id/popup_edit_layout" android:layout_height="wrap_content" android:layout_width="wrap_content" android:background="@android:drawable/screen_background_light" android:orientation="vertical">
    <CheckBox android:text="Einbußen anzeigen" android:layout_width="fill_parent" android:id="@+id/cb_show_modifier" android:layout_height="wrap_content"></CheckBox>
    <CheckBox android:layout_alignParentLeft="true" android:layout_height="wrap_content" android:layout_below="@+id/cb_show_normal" android:layout_width="fill_parent" android:id="@+id/cb_show_armor" android:text="Rüstungen anzeigen"></CheckBox>
    <CheckBox android:layout_height="wrap_content" android:layout_width="fill_parent" android:text="Ausweichen anzeigen" android:id="@+id/cb_show_evade"></CheckBox>
</LinearLayout>
