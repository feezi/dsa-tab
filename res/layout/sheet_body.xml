<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sheet_body"
    android:layout_width="0dp"
    android:layout_height="fill_parent"
    android:layout_margin="@dimen/page_margin"
    android:layout_weight="1" >

    <ImageView
        android:id="@+id/body_background"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"        
        android:src="@drawable/character" android:scaleType="fitCenter"/>
    
	<com.dsatab.view.BodyLayout android:id="@+id/body_layout" android:layout_height="fill_parent" android:layout_width="fill_parent"/>
	
	<TextView android:layout_width="wrap_content" android:gravity="center" android:layout_height="wrap_content" android:layout_below="@+id/body_total_be" android:layout_alignLeft="@+id/body_total_be" android:layout_alignRight="@+id/body_total_be" android:text="BE"></TextView>
	
	<TextView android:padding="5dp" android:background="@drawable/icon_armor_btn" android:layout_width="wrap_content" android:gravity="center" android:layout_margin="5dp" android:height="50dp" android:layout_height="wrap_content" android:width="50dp" android:textSize="30dp" android:layout_alignParentRight="true" android:id="@+id/body_total_be" android:text="4" android:textColor="@android:color/primary_text_light"></TextView>
	
	<TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:background="@drawable/icon_armor_btn" android:text="8" android:gravity="center" android:textSize="30dp" android:id="@+id/body_total_rs" android:width="50dp" android:height="50dp" android:padding="5dp" android:layout_margin="5dp" android:textColor="@android:color/primary_text_light"></TextView>
	<TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_below="@+id/body_total_rs" android:layout_alignLeft="@+id/body_total_rs" android:layout_alignRight="@+id/body_total_rs" android:text="Total" android:gravity="center"></TextView>
	
</RelativeLayout>
