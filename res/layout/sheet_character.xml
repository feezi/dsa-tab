			</TableRow>
		</TableLayout>
		<ImageButton android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/details_switch" android:layout_alignParentRight="true" android:src="@drawable/expander_ic_maximized" android:background="@null" android:layout_marginRight="5dp" android:layout_marginTop="5dp"/>


		
