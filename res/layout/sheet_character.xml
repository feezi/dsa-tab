					android:ellipsize="middle" android:paddingLeft="5dip" style="@style/TextValueSmall" android:layout_width="match_parent" android:gravity="left" android:lines="1"></TextView>


			</TableRow>
			<TableRow android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:id="@+id/row_kultur">
				<TextView android:layout_width="wrap_content"
					android:layout_height="wrap_content" style="@style/TextLabelSmall" android:text="@string/label_kultur"></TextView>
				<TextView android:layout_width="wrap_content"
					android:layout_height="wrap_content" android:id="@+id/gen_kultur"
					android:layout_span="3" android:text="Mittelländische Städte"
					android:ellipsize="middle" android:paddingLeft="5dip" style="@style/TextValueSmall" android:gravity="left" android:lines="1"></TextView>


			</TableRow>
			<TableRow android:layout_width="wrap_content"
				android:layout_height="wrap_content">
