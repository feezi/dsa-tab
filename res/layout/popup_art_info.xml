<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:fillViewport="true"
	android:layout_height="fill_parent">

	<TableLayout android:layout_width="fill_parent"
		android:layout_height="fill_parent" android:stretchColumns="0,1"
		android:paddingLeft="5dp" android:paddingRight="5dp"
		android:shrinkColumns="1" android:id="@+id/popup_liturgie_table">
		
		<TableRow android:layout_width="wrap_content"
			android:layout_height="wrap_content">
			<TextView android:layout_width="wrap_content" android:text="Art"
				style="@style/TextLabel.Popup" android:layout_height="wrap_content"></TextView>
			<TextView android:layout_width="wrap_content" android:id="@+id/popup_liturgie_type"
				style="@style/TextValue.Small.NoTouch" android:layout_height="wrap_content"
				android:text="Ritual" android:gravity="right|center_vertical"></TextView>
		</TableRow>
		
		<TableRow android:layout_width="wrap_content"
			android:layout_height="wrap_content">
			<TextView android:layout_width="wrap_content" android:text="Ziel"
				style="@style/TextLabel.Popup" android:layout_height="wrap_content"></TextView>
			<TextView android:layout_width="wrap_content" android:id="@+id/popup_liturgie_target"
				style="@style/TextValue.Small.NoTouch" android:layout_height="wrap_content"
				android:text="P" android:gravity="right|center_vertical"></TextView>
		</TableRow>
		
		<TableRow android:layout_width="wrap_content"
			android:layout_height="wrap_content">
			<TextView android:layout_width="wrap_content" android:text="Reichweite"
				style="@style/TextLabel.Popup" android:layout_height="wrap_content"></TextView>
			<TextView android:layout_width="wrap_content" android:id="@+id/popup_liturgie_range"
				style="@style/TextValue.Small.NoTouch" android:layout_height="wrap_content"
				android:text="Z" android:gravity="right|center_vertical"></TextView>
		</TableRow>
		
		<TableRow android:layout_width="wrap_content"
			android:layout_height="wrap_content">
			<TextView android:layout_width="wrap_content" android:text="Ritualdauer"
				style="@style/TextLabel.Popup" android:layout_height="wrap_content"></TextView>
			<TextView android:layout_width="wrap_content" android:id="@+id/popup_liturgie_castduration"
				style="@style/TextValue.Small.NoTouch" android:layout_height="wrap_content"
				android:text="Z" android:gravity="right|center_vertical"></TextView>
		</TableRow>
		
		<TableRow android:layout_height="wrap_content"
			android:layout_width="wrap_content">
			<TextView android:layout_height="wrap_content"
				android:layout_width="wrap_content" style="@style/TextLabel.Popup"
				android:text="Wirkung"></TextView>
			<TextView android:layout_height="wrap_content"
				android:layout_width="wrap_content" style="@style/TextValue.Small.NoTouch"
				android:id="@+id/popup_liturgie_effect"
				android:text="" android:singleLine="false" android:gravity="right|center_vertical"></TextView>
		</TableRow>
		
		<TableRow android:layout_width="wrap_content"
			android:layout_height="wrap_content">
			<TextView android:layout_width="wrap_content" android:text="Wirkungsdauer"
				android:paddingRight="5dp" style="@style/TextLabel.Popup"
				android:layout_height="wrap_content"></TextView>
			<TextView android:layout_width="wrap_content" android:text=""
				style="@style/TextValue.Small.NoTouch" android:layout_height="wrap_content"
				android:id="@+id/popup_liturgie_effectduration" android:gravity="right|center_vertical"></TextView>
		</TableRow>
		
		<TableRow android:layout_width="wrap_content"
			android:layout_height="wrap_content">
			<TextView android:layout_width="wrap_content" android:text="Probe"
				style="@style/TextLabel.Popup" android:layout_height="wrap_content"></TextView>
			<TextView android:layout_width="wrap_content" android:id="@+id/popup_liturgie_probe"
				style="@style/TextValue.NoTouch" android:layout_height="wrap_content"
				android:gravity="right|center_vertical"></TextView>
		</TableRow>
		
		<TableRow android:layout_width="wrap_content"
			android:layout_height="wrap_content">
			<TextView android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:text="Kosten"
				style="@style/TextLabel.Popup"></TextView>
			<TextView android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:text="10SP"
				style="@style/TextValue.NoTouch" android:id="@+id/popup_liturgie_costs" android:gravity="right|center_vertical"></TextView>
		</TableRow>
		
		<TableRow android:layout_width="wrap_content"
			android:layout_height="wrap_content">
			<TextView android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:text="Herkunft"
				style="@style/TextLabel.Popup"></TextView>
			<TextView android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:text="10SP"
				style="@style/TextValue.Small.NoTouch" android:id="@+id/popup_liturgie_origin" android:gravity="right|center_vertical"></TextView>
		</TableRow>
		
	</TableLayout>
</ScrollView>

		



