<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/popup_item_chooser_layout" android:layout_height="wrap_content"
	android:layout_width="fill_parent" android:addStatesFromChildren="true"
	android:padding="5dip">

	<ListView android:layout_height="wrap_content" android:id="@+id/popup_item_list"
		android:layout_width="fill_parent" android:layout_alignParentTop="true"
		android:layout_above="@+id/popup_item_all"
		android:layout_alignParentRight="true">

	</ListView>
	<Button android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:layout_alignParentBottom="true"
		android:layout_alignParentRight="true" android:id="@+id/popup_item_all"
		android:text="andere"></Button>
</RelativeLayout>
