<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/gen_talent_sheet" android:layout_height="fill_parent"
	android:layout_width="fill_parent">

	<Spinner android:layout_above="@+id/notes_text"
		android:layout_width="wrap_content" android:layout_alignParentLeft="true"
		android:id="@+id/notes_spn_category" android:layout_toLeftOf="@+id/notes_btn_mic_add"
		android:layout_height="wrap_content"></Spinner>
	<ImageButton android:layout_above="@+id/notes_text"
		android:id="@+id/notes_btn_add" android:layout_alignParentRight="true"
		android:layout_width="50dip" android:layout_height="50dip"
		android:src="@drawable/m_icon_edit" android:scaleType="centerInside"></ImageButton>
	<ImageButton android:layout_above="@+id/notes_text"
		android:id="@+id/notes_btn_mic_add" android:layout_toLeftOf="@+id/notes_btn_add"
		android:layout_height="50dip" android:layout_width="50dip"
		android:src="@drawable/m_icon_mic" android:scaleType="centerInside"></ImageButton>
	<ListView android:layout_below="@+id/notes_spn_category"
		android:layout_width="fill_parent" style="@style/BorderPanel"
		android:cacheColorHint="#00000000" android:id="@android:id/list"
		android:layout_height="wrap_content" android:layout_alignParentBottom="true"></ListView>


</RelativeLayout>