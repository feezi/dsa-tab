<?xml version="1.0" encoding="utf-8"?>
<TableRow xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="wrap_content">

	<TextView android:text="Talentname"
		style="@style/TextLabel" android:gravity="center_vertical"
		android:id="@+id/spell_row_name"
		android:layout_width="wrap_content" android:paddingLeft="@dimen/table_cell_padding" android:layout_height="wrap_content" android:singleLine="false" android:layout_gravity="center_vertical" android:layout_weight="1"></TextView>

	<TextView android:layout_height="wrap_content"
		 android:layout_width="wrap_content"
		android:id="@+id/spell_row_probe" android:gravity="center_vertical"
		android:text="Probe" style="@style/TextLabelSmall" android:layout_gravity="center_vertical"></TextView>
		
		<TextView android:layout_height="wrap_content" android:layout_width="wrap_content"
		android:id="@+id/spell_row_value" android:gravity="center_vertical"
		style="@style/TextValue" android:paddingLeft="@dimen/table_cell_padding" android:text="8" android:paddingRight="@dimen/table_cell_padding" android:layout_gravity="center_vertical"></TextView>
		
		
</TableRow>