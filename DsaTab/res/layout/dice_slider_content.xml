<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/contentLayout" android:gravity="center|top"
	android:layout_width="fill_parent" android:layout_height="fill_parent" android:paddingBottom="0dip"
	android:paddingLeft="10dip" android:paddingRight="10dip"
	android:paddingTop="10dip" android:clickable="true" android:background="@drawable/bg_tab_dice">







	<TableLayout android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:id="@+id/dice_probe_table"
		android:shrinkColumns="0" android:layout_alignParentLeft="true" android:gravity="center" android:layout_toLeftOf="@+id/dice_info">
		<TableRow android:layout_width="wrap_content"
			android:layout_below="@+id/dice_dices" android:layout_toRightOf="@+id/TableLayout01"
			android:id="@+id/TableRow01" android:layout_height="wrap_content">
			<TextView android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:text="Schleichen"
				android:id="@+id/dice_talent" android:paddingRight="3dip"
				android:textColor="#ffffff" android:textSize="15dip"
				android:ellipsize="end"></TextView>
			<TextView android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:textColor="#ffffff"
				android:textSize="20dip" android:text="(KK/KO/IN)" android:gravity="center_horizontal"
				android:id="@+id/dice_probe"></TextView>

			<TextView android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:textColor="#ffffff" android:textSize="20dip"
				android:layout_marginLeft="20dip" android:id="@+id/dice_effect" android:text="TaP*"></TextView>
		</TableRow>
		<TableRow android:id="@+id/TableRow02" android:layout_width="wrap_content"
			android:layout_height="wrap_content">
			<TextView android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:id="@+id/dice_talent_value"
				android:gravity="center_horizontal" android:text="5"
				android:textStyle="bold" android:textColor="#ffffff"
				android:textSize="20dip"></TextView>
			<TextView android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:gravity="center_horizontal"
				android:textStyle="bold" android:textColor="#ffffff"
				android:textSize="20dip" android:text="13/15/9" android:id="@+id/dice_value"></TextView>

			<TextView android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:text="5"
				android:textSize="20dip" android:textColor="#ffffff"
				android:layout_marginLeft="20dip" android:gravity="center_horizontal"
				android:id="@+id/dice_effect_value"></TextView>
		</TableRow>
	</TableLayout>
	<ImageButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true" android:id="@+id/dice_info" android:src="@android:drawable/ic_menu_info_details" android:background="@null" android:layout_alignTop="@+id/dice_probe_table" android:layout_alignBottom="@+id/dice_probe_table" android:scaleType="fitCenter"></ImageButton>
	<LinearLayout android:layout_height="wrap_content"
		android:layout_width="wrap_content" android:layout_centerHorizontal="true"
		android:id="@+id/dice_dices" android:layout_toRightOf="@+id/dice_probe_table"
		android:layout_alignParentRight="true" android:gravity="center_horizontal"
		android:layout_alignWithParentIfMissing="true"
		android:layout_alignParentLeft="true" android:layout_below="@+id/dice_probe_table">
		<ImageView android:id="@+id/dice_w20" android:src="@drawable/w20"
			android:layout_marginRight="5dip" android:layout_width="@dimen/dice_size"
			android:layout_height="@dimen/dice_size" android:scaleType="fitCenter"
			android:soundEffectsEnabled="false"></ImageView>
		<ImageView android:id="@+id/dice_w6" android:src="@drawable/w6_6"
			android:layout_marginLeft="5dip" android:layout_height="@dimen/dice_size"
			android:layout_width="@dimen/dice_size" android:scaleType="fitCenter"
			android:soundEffectsEnabled="false"></ImageView>
		<ImageView android:layout_marginLeft="5dip" android:id="@+id/dice_area"
			android:src="@drawable/icon_dummy" android:scaleType="fitCenter"
			android:layout_gravity="center_vertical" android:layout_height="@dimen/dice_size"
			android:layout_width="@dimen/dice_size" android:visibility="gone"></ImageView>
	</LinearLayout>
	<LinearLayout android:orientation="horizontal" android:id="@+id/dice_dice_result"
		android:layout_alignParentRight="true" android:layout_alignParentLeft="true"
		android:layout_alignParentBottom="false" android:layout_below="@+id/dice_dices"
		android:layout_width="fill_parent" android:layout_height="fill_parent"
		android:layout_marginTop="10dip">

	</LinearLayout>








</RelativeLayout>

