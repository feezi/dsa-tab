<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:padding="5dp" >

    <android.support.v7.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:columnCount="1"
        app:orientation="vertical"
        app:useDefaultMargins="true" >

        <TextView
            android:id="@+id/popup_edit_name_label"
            style="?android:attr/listSeparatorTextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_column="1"
            app:layout_gravity="fill_horizontal"
            app:layout_row="0"
            android:gravity="left|center_vertical"
            android:text="Name" >
        </TextView>

        <ImageView
            android:id="@+id/popup_edit_icon"
            style="?attr/android:spinnerStyle"
            android:layout_width="@dimen/icon_button_size"
            android:layout_height="@dimen/icon_button_size"
            app:layout_column="0"
            app:layout_gravity="bottom|right"
            app:layout_row="0"
            app:layout_rowSpan="2" />

        <EditText
            android:id="@+id/popup_edit_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_column="1"
            app:layout_gravity="bottom|fill_horizontal"
            app:layout_row="1"
            android:inputType="textPersonName" >

            <requestFocus>
            </requestFocus>
        </EditText>

        <TextView
            android:id="@+id/popup_edit_capacity_label"
            style="?android:attr/listSeparatorTextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_column="0"
            app:layout_columnSpan="2"
            app:layout_gravity="fill_horizontal"
            app:layout_row="2"
            android:text="KapazitÃ¤t" >
        </TextView>

        <EditText
            android:id="@+id/popup_edit_capacity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_columnSpan="2"
            app:layout_gravity="fill_horizontal"
            app:layout_row="3"
            android:inputType="number"
            android:lines="3" >
        </EditText>

        <android.support.v7.widget.Space
            android:id="@+id/space1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_column="0"
            app:layout_gravity="left|top"
            app:layout_columnSpan="2"
            app:layout_row="4" />
        
    </android.support.v7.widget.GridLayout>

</ScrollView>