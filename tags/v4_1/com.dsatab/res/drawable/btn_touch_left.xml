<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <gradient android:angle="90" android:centerColor="#11000000" android:endColor="#00000000" android:startColor="#33000000" />
            <stroke android:width="2dp" android:color="#99000000" />
            <corners android:topLeftRadius="20dp" android:bottomLeftRadius="20dp" />
        </shape>        
    </item>    
    <item>
        <shape>
            <gradient android:angle="90" android:centerColor="#11000000" android:endColor="#00000000" android:startColor="#33000000" />
            <stroke android:width="2dp" android:color="#33000000" />
            <corners android:topLeftRadius="20dp" android:bottomLeftRadius="20dp" />
        </shape>
        </item>

</selector>