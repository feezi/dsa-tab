<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"    
    android:id="@+id/sheet_items"
    android:layout_width="match_parent" android:layout_weight="1"
    android:layout_margin="@dimen/page_margin"
    android:layout_height="fill_parent">    

    <com.animoto.android.views.DraggableGridView android:id="@+id/workspace" android:layout_width="match_parent" 
    android:layout_height="match_parent"
    android:verticalSpacing="@dimen/workspace_cell_padding"
    android:horizontalSpacing="@dimen/workspace_cell_padding"
    android:layout_marginBottom="@dimen/icon_button_size"
	android:numColumns="auto_fit" android:stretchMode="spacingWidthUniform" android:columnWidth="@dimen/workspace_cell_width">
	</com.animoto.android.views.DraggableGridView>
    
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/icon_button_size" android:layout_gravity="bottom">
        
        <com.dsatab.view.PageButton
        android:id="@+id/previous_screen"
        android:layout_width="wrap_content"
        android:layout_gravity="left|center_vertical"
        android:focusable="true" android:layout_height="56dp" android:background="@null" android:paddingTop="20dp" android:paddingBottom="20dp" android:paddingLeft="5dp" android:gravity="left|center_vertical" android:minWidth="50dp"/>
        
        <com.dsatab.view.PageButton
        android:id="@+id/next_screen"
        android:layout_width="wrap_content"
        android:layout_gravity="right|center_vertical"
        android:focusable="true" android:layout_height="56dp" android:background="@null" android:paddingBottom="20dp" android:paddingTop="20dp" android:paddingRight="5dp" android:gravity="right|center_vertical" android:minWidth="50dp"/>
        
    </FrameLayout>

</FrameLayout>
