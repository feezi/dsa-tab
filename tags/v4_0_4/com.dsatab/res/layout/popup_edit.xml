<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/popup_edit_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="4dip" >

    <CheckBox
        android:id="@+id/popup_edit_be_calculation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="BE automatisch berechnen" >
    </CheckBox>

    <kankan.wheel.widget.WheelView
        android:id="@+id/popup_edit_text"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignWithParentIfMissing="true"
        android:layout_below="@+id/popup_edit_be_calculation" />

    <ToggleButton
        android:id="@+id/popup_edit_combat_style"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/popup_edit_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" >
    </ToggleButton>

</RelativeLayout>