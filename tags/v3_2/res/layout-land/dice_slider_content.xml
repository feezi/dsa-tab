<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/contentLayout" android:gravity="center|top"
	android:layout_width="fill_parent" android:layout_height="fill_parent" android:paddingBottom="2.5dip" android:paddingTop="10dip" android:orientation="vertical">
    <TextView android:id="@+id/dice_talent" android:paddingRight="3dip" android:layout_height="wrap_content" android:text="Schleichen" android:ellipsize="end" android:layout_width="match_parent" android:gravity="center_horizontal" android:lines="1" style="@style/TextLabel.Inverse"></TextView>
    
    <ViewStub android:id="@+id/modifier_container_stub" android:layout="@layout/popup_probe_info" android:inflatedId="@+id/modifier_container" android:layout_width="wrap_content" android:layout_gravity="center_horizontal" android:layout_height="fill_parent"></ViewStub>

	<LinearLayout android:layout_height="wrap_content"
		android:id="@+id/dice_dices" android:gravity="center" android:layout_width="fill_parent">
		<TableLayout android:layout_width="wrap_content" android:shrinkColumns="0" android:id="@+id/dice_probe_table" android:layout_height="wrap_content">
			<TableRow android:layout_height="wrap_content" android:layout_width="wrap_content">
				<TextView android:id="@+id/dice_taw" android:paddingRight="3dip" android:layout_height="wrap_content" android:text="TaW" android:layout_width="match_parent" android:gravity="center_horizontal" style="@style/TextLabel.Small.Inverse"></TextView>
				<TextView android:id="@+id/dice_probe" android:gravity="center_horizontal" android:layout_height="wrap_content" android:text="(KK/KO/IN)" android:layout_width="match_parent" style="@style/TextLabel.Small.Inverse"></TextView>
				<TextView android:id="@+id/dice_effect" android:layout_height="wrap_content" android:text="TaP*" android:layout_marginLeft="5dip" android:layout_width="match_parent" android:gravity="center_horizontal" style="@style/TextLabel.Small.Inverse"></TextView>
			</TableRow>
			<TableRow android:layout_height="wrap_content" android:layout_width="wrap_content">
				<TextView android:id="@+id/dice_talent_value" android:gravity="center_horizontal" android:layout_height="wrap_content" android:layout_width="wrap_content" android:text="5" android:textStyle="bold" android:paddingRight="5dp" android:paddingLeft="5dp" style="@style/TextValue.NoTouch.Inverse"></TextView>
				<TextView android:id="@+id/dice_value" android:gravity="center_horizontal" android:layout_height="wrap_content" android:layout_width="wrap_content" android:text="13/15/9" style="@style/TextValue.NoTouch.Inverse"></TextView>
				<TextView android:id="@+id/dice_effect_value" android:gravity="center_horizontal" android:layout_height="wrap_content" android:layout_width="wrap_content" android:text="5" android:layout_marginLeft="5dip" android:textStyle="bold" style="@style/TextValue.NoTouch.Inverse"></TextView>
			</TableRow>
		</TableLayout>
		<ImageButton android:background="@null" android:layout_width="wrap_content" android:id="@+id/dice_info" android:scaleType="fitCenter" android:src="@drawable/ic_menu_info_details" android:layout_marginRight="10dp" android:layout_height="wrap_content"></ImageButton>
		<ImageView android:id="@+id/dice_w20" android:src="@drawable/w20" android:layout_marginRight="5dip" android:layout_width="@dimen/dice_size" android:layout_height="@dimen/dice_size" android:scaleType="fitCenter" android:layout_gravity="center_vertical"></ImageView>
		<ImageView android:id="@+id/dice_w6"
			android:src="@drawable/w6_6" android:layout_marginLeft="5dip" android:layout_height="@dimen/dice_size" android:layout_width="@dimen/dice_size" android:scaleType="fitCenter" android:layout_gravity="center_vertical"></ImageView>
	<com.dsatab.view.GlossyImageButton android:layout_marginLeft="5dip" android:id="@+id/dice_area" android:src="@drawable/icon_dummy" android:scaleType="fitCenter" android:layout_height="@dimen/dice_size" android:layout_width="@dimen/dice_size" android:layout_gravity="center_vertical" android:visibility="gone"/>
			<com.dsatab.view.GlossyButton android:id="@+id/dice_execute" android:gravity="center" android:drawableTop="@drawable/ic_menu_dice" android:text="WÃ¼rfeln" android:layout_gravity="center_vertical" android:layout_width="@dimen/dice_size" android:layout_height="@dimen/dice_size" android:layout_marginLeft="5dp"/>
	</LinearLayout>
	
	<LinearLayout android:orientation="horizontal" android:id="@+id/dice_dice_result"
	android:layout_width="fill_parent" android:layout_marginTop="10dip" android:gravity="center_horizontal" android:layout_height="@dimen/dices_size" android:paddingBottom="10dp">

	</LinearLayout>



</LinearLayout>

