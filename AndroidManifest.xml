<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="com.dsatab" android:installLocation="auto"
	android:versionCode="49" android:versionName="3.1">
	
	<uses-sdk android:minSdkVersion="7" android:targetSdkVersion="14" />

	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
	<uses-permission android:name="android.permission.VIBRATE" />
	<uses-permission android:name="android.permission.INTERNET" />
	<uses-permission android:name="android.permission.RECORD_AUDIO" />

	<uses-feature android:required="false"
		android:name="android.hardware.microphone"></uses-feature>
	<uses-feature android:required="false"
		android:name="android.hardware.sensor.gyroscope"></uses-feature>
	<uses-feature android:required="true"
		android:name="android.hardware.touchscreen"></uses-feature>
		
	<supports-screens android:largeScreens="true"
		android:resizeable="true" android:anyDensity="true"
		android:normalScreens="true" android:smallScreens="true"
		android:xlargeScreens="true" />
	
	<application android:label="DsaTab" android:icon="@drawable/icon" android:theme="@style/DsaTabTheme"
	    android:hardwareAccelerated="true" android:name="DSATabApplication" android:largeHeap="true">
		
		<activity android:windowSoftInputMode="stateAlwaysHidden|adjustUnspecified"
			android:name="com.dsatab.activity.MainActivity" android:uiOptions="splitActionBarWhenNarrow">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
		
		<activity android:name=".activity.DsaPreferenceActivityHC"
		    android:theme="@style/Theme.Sherlock.Light"
			android:label="Einstellungen"></activity>
		<activity android:name=".activity.DsaPreferenceActivity"
		    android:theme="@style/Theme.Sherlock"
			android:label="Einstellungen"></activity>		
		<activity android:name="com.dsatab.activity.ItemChooserActivity"		    
			android:label="Inventar"></activity>
		
		<activity android:name="com.dsatab.activity.NotesEditActivity"
			android:windowSoftInputMode="stateAlwaysHidden|adjustUnspecified"
			android:logo="@android:drawable/ic_menu_edit"
			android:label="Notiz bearbeiten" android:theme="@style/Theme.Dialog"></activity>
		
		<activity android:name=".activity.TabEditActivity"
			android:windowSoftInputMode="stateAlwaysHidden|adjustUnspecified"
			android:logo="@android:drawable/ic_menu_edit"
			android:theme="@style/Theme.Dialog" android:label="Tab bearbeiten"></activity>
		
		<activity android:name=".activity.ModificatorEditActivity"
			android:windowSoftInputMode="stateAlwaysHidden|adjustUnspecified"
			android:logo="@android:drawable/ic_menu_edit"
			android:theme="@style/Theme.Dialog" android:label="Modifikator bearbeiten"></activity>
		
		<activity android:name="com.dsatab.activity.HeroChooserActivity"
			android:label="Held auswÃ¤hlen"></activity>
		
		<activity android:name="com.dsatab.activity.SearchableActivity"
			android:launchMode="singleTop" android:label="Suche">
			<intent-filter>
				<action android:name="android.intent.action.SEARCH" />
			</intent-filter>
			<meta-data android:name="android.app.searchable"
				android:resource="@xml/searchable" />
		</activity>
				
		<activity
	      android:name="com.dropbox.client2.android.AuthActivity"
	      android:launchMode="singleTask"
	      android:configChanges="orientation|keyboard">
	      <intent-filter>
	        <!-- Change this to be db- followed by your app key -->
	        <data android:scheme="db-00nrr4dxqnxmvi2" />
	        <action android:name="android.intent.action.VIEW" />
	        <category android:name="android.intent.category.BROWSABLE"/>
	        <category android:name="android.intent.category.DEFAULT" />
	      </intent-filter>
	    </activity>
	    
	    <receiver android:name="com.gandulf.guilib.util.DownloadBroadcastReceiver" android:exported="false">
	        <intent-filter>
	            <action android:name="android.intent.action.DOWNLOAD_COMPLETE"/>
	        </intent-filter>
	    </receiver>
	    
        <service android:name="com.gandulf.guilib.util.UnzipIntentService" android:exported="false"></service>

		<meta-data android:name="android.app.default_searchable"
			android:value="com.dsatab.activity.SearchableActivity"
			android:voiceSearchMode="showVoiceSearchButton|launchRecognizer" />

	</application>
	
</manifest> 