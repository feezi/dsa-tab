<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:padding="5dp" >

    <RelativeLayout
        android:id="@+id/popup_edit_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/popup_edit_name_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/popup_edit_name"
            android:layout_alignParentLeft="true"
            android:layout_alignTop="@+id/popup_edit_name"
            android:gravity="left|center_vertical"
            android:text="Name" >
        </TextView>

        <EditText
            android:id="@+id/popup_edit_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/popup_edit_info"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:inputType="textPersonName" >

            <requestFocus>
            </requestFocus>
        </EditText>

        <TextView
            android:id="@+id/popup_edit_info_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/popup_edit_info"
            android:layout_alignParentLeft="true"
            android:layout_alignTop="@+id/popup_edit_info"
            android:gravity="left|center_vertical"
            android:text="Regeln" >
        </TextView>

        <EditText
            android:id="@+id/popup_edit_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/popup_edit_name"
            android:layout_toRightOf="@+id/popup_edit_info_label"
            android:hint="z.B.: MU+2, KL-1"
            android:inputType="textMultiLine"
            android:lines="3" >
        </EditText>

        <TextView
            android:id="@+id/popup_edit_info_help"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/popup_edit_info"
            android:layout_alignRight="@+id/popup_edit_info"
            android:layout_below="@+id/popup_edit_info"
            android:text="Regeln im Format &quot;MU+2, KL-1, Zauber+1, Talente+2, Eigenschaften+1, AT+1, PA+1, INI+2, AW+2, MR+1&quot; eingeben. Kein Leerzeichen zwischen Eigenschaft und +/-. Um TP anzupassen entweder den Namen der Waffe, des Talentes, des Zaubers, ... oder AT/FK gefolgt von TP eingeben z.B.: AT TP+2, Langdolch TP+1, Dolche TP-1."
            android:textAppearance="?android:attr/textAppearanceSmall" >
        </TextView>

        <EditText
            android:id="@+id/popup_edit_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/popup_edit_info_help"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/popup_edit_info_help"
            android:layout_marginTop="5dp"
            android:inputType="textShortMessage" >
        </EditText>

        <TextView
            android:id="@+id/popup_edit_duration_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/popup_edit_comment"
            android:layout_alignParentLeft="true"
            android:layout_alignTop="@+id/popup_edit_comment"
            android:layout_toLeftOf="@+id/popup_edit_comment"
            android:gravity="left|center_vertical"
            android:text="Info" >
        </TextView>

        <CheckBox
            android:id="@+id/popup_edit_active"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/popup_edit_comment"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/popup_edit_comment"
            android:text="Aktiv" >
        </CheckBox>
    </RelativeLayout>

</ScrollView>