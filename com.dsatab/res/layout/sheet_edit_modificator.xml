<?xml version="1.0" encoding="utf-8"?>
<ScrollView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:padding="5dp" >

    <android.support.v7.widget.GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start|end"
        app:columnCount="2"
        app:orientation="vertical"
        app:useDefaultMargins="true">
        
        <TextView
            android:id="@+id/popup_edit_name_label"
            style="?android:attr/listSeparatorTextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_gravity="fill_horizontal"
            android:text="Name" >

        </TextView>

        <EditText
            android:id="@+id/popup_edit_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_gravity="fill_horizontal"
            android:inputType="textPersonName" >

            <requestFocus>
            </requestFocus>
        </EditText>

        <TextView
            android:id="@+id/popup_edit_info_label"
            style="?android:attr/listSeparatorTextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_gravity="fill_horizontal"
            android:text="Regeln" >
        </TextView>

        <EditText
            android:id="@+id/popup_edit_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_gravity="fill_horizontal"
            android:hint="z.B.: MU+2, KL-1"
            android:inputType="textMultiLine"
            android:lines="3" >
        </EditText>

        <TextView
            android:id="@+id/popup_edit_info_help"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_gravity="fill_horizontal"
            android:text="Regeln im Format &quot;MU+2, KL-1, Zauber+1, Talente+2, Eigenschaften+1, AT+1, PA+1, INI+2, AW+2, MR+1&quot; eingeben. Kein Leerzeichen zwischen Eigenschaft und +/-. Um TP anzupassen entweder den Namen der Waffe, des Talentes, des Zaubers, ... oder AT/FK gefolgt von TP eingeben z.B.: AT TP+2, Langdolch TP+1, Dolche TP-1."
            android:textAppearance="?android:attr/textAppearanceSmall" >
        </TextView>

        <TextView
            android:id="@+id/popup_edit_duration_label"
            style="?android:attr/listSeparatorTextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_gravity="fill_horizontal"
            android:text="Info" >
        </TextView>
        
        <EditText
            android:id="@+id/popup_edit_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_gravity="fill_horizontal"
            android:inputType="textShortMessage" >
        </EditText>

        

        <CheckBox
            android:id="@+id/popup_edit_active"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_gravity="fill_horizontal"
            android:text="Aktiv" >
        </CheckBox>
        
    </android.support.v7.widget.GridLayout>

</ScrollView>